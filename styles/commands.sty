% usage: \tsize<size>{Text}
% sizes: tiny, script, footnote, small, normal, large, Large, LARGE, huge, Huge
% example:
%   \tsizetiny{lorem ipsum}
%   \tsizeHuge{lorem ipsum}
%
\newcommand{\tsizetiny}[1]{{\tiny\text{#1}}}
\newcommand{\tsizescript}[1]{{\scriptsize\text{#1}}}
\newcommand{\tsizefootnote}[1]{{\footnotesize\text{#1}}}
\newcommand{\tsizesmall}[1]{{\small\text{#1}}}
\newcommand{\tsizenormal}[1]{{\normalsize\text{#1}}}
\newcommand{\tsizelarge}[1]{{\large\text{#1}}}
\newcommand{\tsizeLarge}[1]{{\Large\text{#1}}}
\newcommand{\tsizeLARGE}[1]{{\LARGE\text{#1}}}
\newcommand{\tsizehuge}[1]{{\huge\text{#1}}}
\newcommand{\tsizeHuge}[1]{{\Huge\text{#1}}}

