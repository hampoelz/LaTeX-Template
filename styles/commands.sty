% usage: \text<size>{Text}
% sizes: tiny, script, footnote, small, normal, large, Large, LARGE, huge, Huge
% example:
%   \texttiny{lorem ipsum}
%   \textHuge{lorem ipsum}
%
\newcommand{\texttiny}[1]{{\tiny\text{#1}}}
\newcommand{\textscript}[1]{{\scriptsize\text{#1}}}
\newcommand{\textfootnote}[1]{{\footnotesize\text{#1}}}
\newcommand{\textsmall}[1]{{\small\text{#1}}}
\newcommand{\textnormal}[1]{{\normalsize\text{#1}}}
\newcommand{\textlarge}[1]{{\large\text{#1}}}
\newcommand{\textLarge}[1]{{\Large\text{#1}}}
\newcommand{\textLARGE}[1]{{\LARGE\text{#1}}}
\newcommand{\texthuge}[1]{{\huge\text{#1}}}
\newcommand{\textHuge}[1]{{\Huge\text{#1}}}

