% ----------- using xcolor package -----------
\usepackage{xcolor}                         % enable colour management

% usage: \hl{Text}
%
\newcommand{\hl}[1]{\colorbox[HTML]{FBF719}{#1}}

% ----------- using array package ------------
\usepackage{array}                          % extend options for column formats

% usage
%   \begin{tabular}{ L{width} C{width} R{width} }
%     ...
%   \end{tabular}
%
\newcolumntype{L}[1]{>{\raggedright\arraybackslash}p{#1}}   % left aligned column with custom width
\newcolumntype{C}[1]{>{\centering\arraybackslash}p{#1}}     % center aligned column with custom width
\newcolumntype{R}[1]{>{\raggedleft\arraybackslash}p{#1}}    % right aligned column with custom width

% ---------- using enumitem package ----------
\usepackage{enumitem}                       % control layout of list environments

% usage:
%   \begin{titled}{Title}
%     ...
%   \end{titled}
%
\usepackage{calc}                           % perform arithmetic on the arguments of latex commands
\newenvironment{titled}[1]{                 % ┝ indent the content by the length of the title
    \begin{description}[%                   % |
            leftmargin=%                    % | example:
                \widthof{\textnormal{#1}},% % |   \begin{titled}{lorem ipsum: }
            labelwidth=0pt,%                % |     Lorem ipsum\\
            labelsep=0pt%                   % |     Lorem ipsum\\
        ]                                   % |     ...
        \item[\textnormal{#1}]              % |   \end{titled}
        \begin{sloppypar}                   % |
}{                                          % | output of example:
        \end{sloppypar}                     % |   lorem ipsum: Lorem ipsum
    \end{description}                       % |                Lorem ipsum
}                                           % |                ...

